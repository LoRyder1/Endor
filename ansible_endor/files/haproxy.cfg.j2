# This is a template for haproxy.cfg
# This file will be managed by Ansible. Do not edit manually.

global
    log /dev/log    local0
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

listen stats
    bind *:8404
    mode http
    stats enable
    stats hide-version
    stats uri /
    stats realm Haproxy\ Statistics
    stats auth admin:password

frontend kubernetes_api
    bind *:6443
    mode tcp
    default_backend kubernetes_api_backend

backend kubernetes_api_backend
    mode tcp
    balance roundrobin
    {% for node in groups['kubernetes_control_plane'] %}
    server {{ node }} {{ hostvars[node]['ansible_host'] }}:6443 check
    {% endfor %}